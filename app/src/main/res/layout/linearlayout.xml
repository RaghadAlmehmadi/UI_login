<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#000000"
    android:padding="20dp">

    <Button
        android:id="@+id/googleButton"
        style="@style/FirstApplicationTextStyleNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/google_logo_logos_icon"
        android:drawablePadding="10dp"
        android:text="Sign In with your Google Account"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#808080"
        android:drawableStart="@drawable/email"
        android:hint="Enter email"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#808080"
        android:drawableStart="@drawable/lock_icon"
        android:drawableEnd="@drawable/eye_password_icon"
        android:hint="Enter password"
        android:padding="10dp"/>

    <Button
        android:id="@+id/login"
        style="@style/FirstApplicationTextStyleNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#3DDC84"
        android:text="LOGIN"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:text="or"
            android:textColor="#808080"
            android:textSize="16sp"
            android:paddingEnd="8dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

        <TextView
            android:text="Forget Password?"
            android:textColor="#1E90FF"
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:text="Don't have an account yet?"
            android:textColor="#808080"
            android:textSize="16sp"
            android:paddingEnd="8dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />

        <TextView
            android:text="Sign Up"
            android:textColor="#1E90FF"
            android:textSize="16sp"
            android:layout_height="match_parent"
             android:layout_width="match_parent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="#808080"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>
</LinearLayout>